{
  "compileOnSave": true,
  "experimentalDecorators": true,
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "noImplicitUseStrict": true,
    "target": "es5",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/",
        "src/types/*"
      ]
    }
  },
  "include": [
    "test/**/*", "gulpfile.js", "src/tic/gulp/plugin.js", "src/tic/gulp/task.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "types": [
    "reflect-metadata"
  ]
}